<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="340dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/dialogTopBgColor"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_bold"
            android:text="Oturumu Kapat"
            android:textColor="@color/dialogTopTxtColor"
            android:textSize="27sp" />

        <ImageView
            android:id="@+id/sign_out_dialog_imgClose"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/close_icon" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/dialogTxtColor"
        android:text="Oturumu kapatmak istediğinize emin misiniz?"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/sign_out_dialog_btnYes"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@drawable/yellow_btn_bg"
            android:fontFamily="@font/poppins_bold"
            android:text="Evet"
            android:textAllCaps="false"
            android:textColor="@color/yellowBtnTxtColor"
            android:textSize="17sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/sign_out_dialog_btnNo"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/orange_btn_bg"
            android:fontFamily="@font/poppins_bold"
            android:text="Hayır"
            android:textAllCaps="false"
            android:textColor="@color/orangeBtnTxtColor"
            android:textSize="17sp"
            app:backgroundTint="@null" />

    </RelativeLayout>

</LinearLayout>