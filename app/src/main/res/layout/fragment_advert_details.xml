<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="advert"
            type="com.nexis.obuluyor.model.Advert" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".view.AdvertDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/custom_toolbar_mainToolbar"
            layout="@layout/custom_toolbar"/>

        <TextView
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_bold"
            android:background="@drawable/advert_details_advert_title_bg"
            android:text="@{advert.title}"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="250dp">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/advert_details_fragment_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" />

        <com.pixelcan.inkpageindicator.InkPageIndicator
            android:layout_width="match_parent"
            android:id="@+id/advert_details_fragment_pageIndicator"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            app:ipi_dotDiameter="8dp"
            app:ipi_dotGap="8dp"
            app:ipi_animationDuration="320"
            app:ipi_pageIndicatorColor="@color/indicatorColor"
            app:ipi_currentPageIndicatorColor="@color/indicatorCurrentColor"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:text="İskender Alp"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/advertDetailsPageTxtTitleColor"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/poppins_bold"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="İlan Bilgileri"
                android:id="@+id/advert_details_fragment_btnAdvertDetails"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:layout_marginStart="15dp"
                android:textColor="@color/advertDetailsBtnTxtColor"
                android:layout_height="wrap_content"
                android:background="@drawable/advert_detail_btn_bg"
                app:backgroundTint="@null"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/advert_details_fragment_btnAdvertContent"
                android:text="Açıklama"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="@color/advertDetailsBtnTxtColor"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_height="wrap_content"
                android:background="@drawable/advert_detail_btn_bg"
                app:backgroundTint="@null"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/advert_details_fragment_btnAdvertLocation"
                android:text="Konumu"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="@color/advertDetailsBtnTxtColor"
                android:layout_marginEnd="15dp"
                android:layout_height="wrap_content"
                android:background="@drawable/advert_detail_btn_bg"
                app:backgroundTint="@null"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:background="@color/advertDetailsButtonsStickColor"
            android:layout_height="3dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:visibility="gone"
        android:id="@+id/advert_details_fragment_recyclerView"
        android:layout_height="match_parent"/>

</LinearLayout>

</layout>