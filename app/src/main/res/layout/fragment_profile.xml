<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.ProfileFragment">

    <include
        android:id="@+id/custom_toolbar_mainToolbar"
        layout="@layout/custom_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/profile_item_bg"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:text="HESAP"
            android:textSize="19sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/profileItemTitleTxtColor"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/profileItemTxtColor"
                android:text="Hesap Bilgilerini DÃ¼zenle"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/profile_fragment_imgUpdateProfile"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/three_points_icon"
                app:tint="@color/profileItemPointsColor" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Oturumu Kapat"
                android:textColor="@color/profileItemTxtColor"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:id="@+id/profile_fragment_imgSignOut"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/three_points_icon"
                app:tint="@color/profileItemPointsColor" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

</layout>