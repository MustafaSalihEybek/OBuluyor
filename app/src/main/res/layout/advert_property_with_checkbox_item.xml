<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="propdata"
            type="com.nexis.obuluyor.model.PropData" />
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="5dp"
    android:id="@+id/advert_property_linearItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <CheckBox
        android:layout_width="wrap_content"
        android:id="@+id/advert_property_checkboxItem"
        android:text="@{propdata.propName}"
        android:textColor="?attr/checkBoxColor"
        android:fontFamily="@font/poppins_medium"
        android:layout_height="wrap_content"
        app:buttonTint="?attr/checkBoxColor"/>

</LinearLayout>

</layout>