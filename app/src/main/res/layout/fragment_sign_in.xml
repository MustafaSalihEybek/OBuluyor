<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/dialogBgColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".view.sign.SignInFragment">

    <TextView
        android:layout_width="wrap_content"
        android:textSize="29sp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:textColor="?attr/signTxtColor"
        android:fontFamily="@font/poppins_bold"
        android:text="İlan vermek için\nGiriş Yapın"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/edit_background_bg"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="26dp"
            android:src="@drawable/email_icon"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_height="26dp"
            app:tint="?attr/editTxtColor"/>

        <EditText
            android:layout_width="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:inputType="textEmailAddress"
            android:id="@+id/sign_in_fragment_editUserEmail"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="17sp"
            android:textColor="?attr/editTxtColor"
            android:textColorHint="?attr/editTxtColor"
            android:hint="E-posta Adresi"
            android:background="?attr/editBackgroundColor"
            android:layout_height="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/edit_background_bg"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="26dp"
            android:src="@drawable/lock_icon"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_height="26dp"
            app:tint="?attr/editTxtColor"/>

        <EditText
            android:layout_width="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:inputType="textPassword"
            android:id="@+id/sign_in_fragment_editUserPassword"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="17sp"
            android:textColor="?attr/editTxtColor"
            android:textColorHint="?attr/editTxtColor"
            android:hint="Şifre"
            android:background="?attr/editBackgroundColor"
            android:layout_height="50dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:text="Şifremi unuttum"
        android:layout_gravity="end"
        android:layout_marginTop="25dp"
        android:textColor="?attr/signTxtColor"
        android:layout_marginEnd="25dp"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_bold"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="match_parent"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="45dp"
        android:id="@+id/sign_in_fragment_btnSignIn"
        android:layout_marginStart="25dp"
        android:text="Giriş Yap"
        android:textSize="19sp"
        android:textColor="?attr/orangeBtnTxtColor"
        android:fontFamily="@font/poppins_bold"
        android:textAllCaps="false"
        android:background="@drawable/orange_btn_bg"
        android:layout_height="wrap_content"
        app:backgroundTint="@null"/>

    <Button
        android:layout_width="match_parent"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        android:id="@+id/sign_in_fragment_btnSignUp"
        android:layout_marginStart="25dp"
        android:text="Hemen Hesap Aç"
        android:fontFamily="@font/poppins_bold"
        android:textSize="19sp"
        android:textAllCaps="false"
        android:textColor="?attr/yellowBtnTxtColor"
        android:background="@drawable/yellow_btn_bg"
        android:layout_height="wrap_content"
        app:backgroundTint="@null"/>

</LinearLayout>