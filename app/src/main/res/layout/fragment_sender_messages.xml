<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?attr/appBgColor"
    android:layout_height="match_parent"
    tools:context=".view.message.SenderMessagesFragment">

    <TextView
        android:layout_width="wrap_content"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:id="@+id/sender_messages_fragment_txtWarning"
        android:layout_centerHorizontal="true"
        android:textColor="?attr/messagesWarningTxtColor"
        android:fontFamily="@font/poppins_bold"
        android:text="Gelen mesajınız bulunmamaktadır!"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:id="@+id/sender_messages_fragment_recyclerView"
        android:layout_height="match_parent"/>

</RelativeLayout>