<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appBgColor"
    tools:context=".view.addadvert.AddAdvertSelectSubCategoriesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:id="@+id/add_advert_select_sub_categories_fragment_linearBar"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/custom_toolbar_mainToolbar"
            layout="@layout/custom_toolbar"/>

        <include
            android:id="@+id/custom_advert_toolbar"
            layout="@layout/custom_advert_toolbar" />

    </LinearLayout>

    <TextView
        android:id="@+id/add_advert_select_sub_categories_fragment_txtTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_advert_select_sub_categories_fragment_linearBar"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="?attr/advertTitleTxtColor"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/add_advert_select_sub_categories_fragment_imgStick"
        android:layout_below="@+id/add_advert_select_sub_categories_fragment_txtTitle1"
        android:background="?attr/advertStickColor" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/add_advert_select_sub_categories_fragment_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/add_advert_select_sub_categories_fragment_imgStick"
        android:scrollbars="none" />

</RelativeLayout>

</layout>