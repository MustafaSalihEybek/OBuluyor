<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="category"
            type="com.nexis.obuluyor.model.Category" />
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="?attr/advertCategoryItemBgColor"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/right_arrow"
            android:layout_height="wrap_content"
            app:tint="?attr/advertCategoryItemTxtColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="@{category.kategori_adi}"
            android:textSize="17sp"
            android:textColor="?attr/advertCategoryItemTxtColor"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppins_regular"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:background="?attr/advertCategoryItemStickColor"
        android:layout_height="2dp"/>

</LinearLayout>

</layout>